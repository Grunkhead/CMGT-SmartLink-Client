{
  "author": "Dave Buitenhuis",
  "name": "CMGT SmartLink",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "version": "1.0",
  "description": "A Chrome extension which fetches data, it displays the data in tiles as URLs. This way students can get shared links and be able to access study information easier and quicker.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "manifest_version": 2,
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
